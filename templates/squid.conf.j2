{% if squid_acls is defined %}
{%- set acl_n = [] -%}
{%- set acl_c = [] -%}
{%- set acl_v = [] -%}
{% for a in squid_acls %}
{{- acl_n.append(a.name | length) -}}
{{- acl_c.append(a.classifier | length) -}}
{{- acl_v.append(a.value | length) -}}
{% endfor %}
{%- set nl = acl_n | max + 2 -%}
{%- set cl = acl_c | max + 2 -%}
{%- set vl = acl_v | max + 2 -%}
{% for acl in squid_acls %}
acl {{ '%-*s' | format(nl, acl.name) }} {{ '%-*s' | format(cl, acl.classifier) }} {{ '%-*s' | format(vl, acl.value) }}{%+ if acl.comment is defined %}# {{ acl.comment }}{% endif +%}
{% endfor %}
{% endif %}

