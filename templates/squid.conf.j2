http_access {{ rule.decision }} {{ rule.acl }}{%+ if rule.comment is defined %} # {{ rule.comment }}{% endif +%}
{% endfor %}
{% endif %}

{% if squid_http_access is defined %}
{%- set cl = [] -%}
{% for h in squid_http_access %}
{{- cl.append(h.acls | join(' ') | length) -}}
{% endfor %}
{%- set al = cl | max + 2 -%}
{% for http_access in squid_http_access %}
http_access {{ '%-5s' | format(http_access.state) }} {{ '%-*s' | format(al, http_access.acls | join(' ')) }}{%+ if http_access.comment is defined %} # {{ http_access.comment }}{% endif +%}
{% endfor %}
{% endif %}

refresh_pattern ^ftp:              1440     20%      10080
refresh_pattern ^gopher:           1440     0%       1440
refresh_pattern -i (/cgi-bin/|\?)  0        0%       0
refresh_pattern .                  0        20%      4320

{% if squid_refresh_patterns is defined %}
{{ 'Custom refresh patterns' | comment }}
{% set rfp_reg = [] -%}
{%- set rfp_min = [] -%}
{%- set rfp_pct = [] -%}
{%- set rfp_max = [] -%}
{% for r in squid_refresh_patterns %}
{{- rfp_reg.append(r.regex | length) -}}
{{- rfp_min.append(r.min | string | length) -}}
{{- rfp_pct.append(r.percent | string | length) -}}
{{- rfp_max.append(r.max | string | length) -}}
{% endfor %}
{%- set regl = rfp_reg | max + 2 -%}
{%- set minl = rfp_min | max + 2 -%}
{%- set pctl = rfp_pct | max + 2 -%}
{%- set maxl = rfp_max | max + 2 -%}
{% for refresh_pattern in squid_refresh_patterns %}
{% set refresh_pattern_percent = refresh_pattern.percent ~ '%' %}
refresh_pattern {{ '%-*s' | format(regl, refresh_pattern.regex) }} {{ '%-*s' | format(minl, refresh_pattern.min) }} {{ '%-*s' | format(pctl, refresh_pattern_percent) }} {{ '%-*s' | format(maxl, refresh_pattern.max) }}{% if refresh_pattern.options is defined %} {{ refresh_pattern.options }}{% endif +%}
{% endfor %}
{% endif %}

